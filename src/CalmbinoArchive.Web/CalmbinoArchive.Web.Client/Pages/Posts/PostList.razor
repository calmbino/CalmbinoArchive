@page "/posts"
@using System.Runtime.InteropServices.JavaScript

<MudContainer Style="padding: 0 15em">
    <MudContainer Class="d-flex justify-end" Style="margin-bottom: 0.8em;">
        <MudButton ButtonType="ButtonType.Button"
                   Href="/posts/create"
                   Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.Create"
                   Color="Color.Inherit">
            작성하기
        </MudButton>
    </MudContainer>
    <MudDivider/>
    <MudList T="MudCard">
        @for (int i = 0; i < 7; i++)
        {
            <MudListItem Href=@($"/posts/{i + 1}")>
                <MudCard Class="d-flex flex-row">
                    <MudCardMedia Style="width: 40%; height: auto; aspect-ratio: 4/3;"  Image="https://cdn.imweb.me/upload/S20210807d1f68b7a970c2/7170113c6a983.jpg"/>
                    <MudCardContent Style="padding: 2em">
                        <MudText Typo="Typo.h5">제목입니다.</MudText>
                        <MudDivider Style="margin: 1em 0"/>
                        <MudText Style="height: 120px" Typo="Typo.body2">간단한 요약&설명입니다.</MudText>
                        <MudDivider Style="margin: 1em 0"/>
                        <MudText Align="Align.Right" Typo="Typo.body2">작성일: @(DateTime.Now)</MudText>
                    </MudCardContent>
                </MudCard>
            </MudListItem>
        }
    </MudList>
</MudContainer>






