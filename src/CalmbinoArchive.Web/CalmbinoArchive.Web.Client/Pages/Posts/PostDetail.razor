@page "/posts/{PostId}"
@rendermode @(new InteractiveWebAssemblyRenderMode(true))

<PageTitle>@Title</PageTitle>

<div style="padding: 0 10rem;">
    <div style="margin-bottom: 0.5rem">
        <MudPaper Style="padding: 0.5rem;" Elevation="4">
            <MudText Typo="Typo.h1" Style="font-size: 3rem;">@Title</MudText>
        </MudPaper>
    </div>
    <EditorView MarkdownValue="@_content"/>
    <MudScrollToTop>
        <MudFab IconSize="Size.Medium" Color="Color.Surface" StartIcon="@Icons.Material.Filled.ArrowCircleUp"/>
    </MudScrollToTop>
</div>

<HeadContent>
    <meta name="description" content="@Description"/>
    <meta name="author" content="Calmbino"/>
</HeadContent>

@code {
    [Parameter] public string PostId { get; set; }

    public string Title { get; set; } = "제목입니다!!!";
    public string Description { get; set; } = "요약 및 설명입니다!!!";


    private string _content { get; set; } = @"# 마크다운 문법의 모든 것 🌟

